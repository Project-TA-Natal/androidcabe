<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_30"
    tools:context=".Splashscreen">

    <TextView
        android:id="@+id/tv_smart_garden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/smart_garden"
        android:textAlignment="center"
        android:textColor="@color/green_color"
        android:textSize="@dimen/ts_35"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_250"
        android:contentDescription="@string/image_cabe"
        android:src="@drawable/bgsplash"
        app:layout_constraintBottom_toTopOf="@+id/cv_splash_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_smart_garden" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/green_color"
        app:cardBackgroundColor="@color/green_color"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_greeting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/dp_20"
                android:text="@string/greeting_head"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_greeting_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/dp_20"
                android:text="@string/greeting_description"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ts_25" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>